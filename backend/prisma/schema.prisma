generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CameraStatus {
  WORKS
  DOESNT_WORK
  WORKS_INTERMITTENTLY
}

model Camera {
  id       String       @id @default(uuid())
  name     String       @unique
  ip       String       @unique
  location String
  status   CameraStatus

  checkResults Check[]
}

model Check {
  id        String   @id @default(uuid())
  cameraId  String
  camera    Camera   @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  timestamp DateTime @default(now())
  avgRttsMs Float
  jitterMs  Float
  lossPct   Float
  errors    String[]
}

model User {
  id             String @id @default(uuid())
  tgUsername     String @unique
  hashedPassword String
}
